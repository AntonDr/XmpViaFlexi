<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="LoginStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:maxLines">1</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/EditTextDefaultHeight</item>
    <item name="android:layout_marginRight">@dimen/Inset6x</item>
    <item name="android:layout_marginLeft">@dimen/Inset6x</item>
    <item name="android:background">@color/login_edit_text_background</item>
    <item name="android:layout_marginTop">@dimen/Inset1x</item>
    <item name="android:layout_marginBottom">@dimen/Inset1x</item>
  </style>

  <style name="ButtonLoginStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">@drawable/button_sing_in</item>
    <item name="android:layout_height">@dimen/ButtonDefaultHeight</item>
    <item name="android:textColor">@color/login_edit_text_background</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginRight">@dimen/Inset8x</item>
    <item name="android:layout_marginLeft">@dimen/Inset8x</item>
    <item name="android:layout_marginTop">@dimen/Inset1x</item>
    
  </style>

  <style name="LoginGeneralStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:orientation">vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingBottom">40dp</item>
    <item name="android:background">@drawable/Login_bg</item>
  </style>

</resources>